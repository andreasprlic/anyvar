#!/bin/bash -e
# ./docker-build <tag>
# docker run -it -p 5000:5000 reece/anyvar
# curl http://localhost:5000/info

imagename=reece/anyvar

eq="============================================================================"
e () { echo "$eq"; echo "+ $@"; $@; }


tag=$(hg id -t)
if [ "$tag" = "tip" ]; then
    tag=master
fi

e docker build -t $imagename:$tag "$@" .
e docker tag $imagename:$tag $imagename:latest 
e docker push $imagename:latest 

